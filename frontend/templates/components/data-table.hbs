<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">{{title}}</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          {{#each header in columnHeaders}}
            <th>{{header}}</th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{yield}}
      </tbody>
    </table>
  </div>
</div>

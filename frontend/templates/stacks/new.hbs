<div class="col-md-6">
  <h2>New stack</h2>
  {{input value=name class="form-control" placeholder="Stack Name"}}
  <ul>
    {{#each mw in middlewares}}
      <li>
        {{mw.underlying.friendlyName}}
        <button {{action "removeFromStack" mw}}>Remove</button>
      </li>
    {{/each}}
  </ul>
</div>

<div class="stack_items col-md-6">
  <h2>Available middleware</h2>

  {{#if middlewareRemaining}}
    {{input value=middlewareQuery placeholder="Search" type="search" class="form-control search"}}
  {{else}}
    <span>No middlewares left to add</span>
  {{/if}}

  {{#each mw in filteredMiddlewares}}
    <div class="stack_item">
      <button class="btn btn-default" {{action 'addToStack' mw}}>Add</button>
      {{mw.friendlyName}}
    </div>
  {{/each}}
</div>
